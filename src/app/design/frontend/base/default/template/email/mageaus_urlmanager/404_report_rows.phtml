<?php
/**
 * @var $this Mage_Core_Block_Template
 * @var array $top_404s
 */
$top_404s = $this->getTop404s();
if (!is_array($top_404s)) {
    $top_404s = [];
}

foreach ($top_404s as $index => $log):
    $rowColor = ($index % 2 === 0) ? '#FFFFFF' : '#F9F9F9';
?>
<tr style="background:<?php echo $rowColor; ?>">
    <td style="padding:10px; border-bottom:1px solid #E0E0E0; font-size:13px; color:#555555; word-break:break-all;">
        <?php echo $this->escapeHtml($log['request_url']); ?>
    </td>
    <td align="center" style="padding:10px; border-bottom:1px solid #E0E0E0; font-size:13px; color:#555555;">
        <strong><?php echo (int)$log['hit_count']; ?></strong>
    </td>
    <td align="center" style="padding:10px; border-bottom:1px solid #E0E0E0; font-size:12px; color:#7F8C8D;">
        <?php echo $this->formatDate($log['last_hit_at'], 'short'); ?>
    </td>
</tr>
<?php endforeach; ?>
